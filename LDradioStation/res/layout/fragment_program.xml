<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/category_ll"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:alpha="0.6"
                    android:background="#f78536"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="show"
                    android:text="耳朵去旅行"
                    android:textColor="#000000"
                    android:textSize="15dp" >
                </TextView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:alpha="0.6"
                            android:background="#666cc8"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="show"
                            android:text="漫游记"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:alpha="0.6"
                            android:background="#e689e7"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="show"
                            android:text="文苑撷英"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tv4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:alpha="0.6"
                            android:background="#facd72"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="show"
                            android:text="书影随行"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:alpha="0.6"
                            android:background="#37c99b"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="show"
                            android:text="巅峰荣耀"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tv6"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:alpha="0.6"
                            android:background="#4b79b5"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="show"
                            android:text="天堂电影院"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tv7"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:alpha="0.6"
                            android:background="#fc3c3c"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="show"
                            android:text="杂货铺子"
                            android:textColor="#000000" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:alpha="0.6"
                        android:background="#c561d4"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="show"
                        android:text="灵犀"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:alpha="0.6"
                        android:background="#37a1a8"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="show"
                        android:text="城市稻草人"
                        android:textColor="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:alpha="0.6"
                    android:background="#d5c116"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="show"
                    android:text="流年爱无边"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:alpha="0.6"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="本类推荐"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/program_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>